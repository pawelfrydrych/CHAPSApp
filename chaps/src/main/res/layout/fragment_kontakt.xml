<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="15dp" android:paddingTop="10dp"
                android:id="@+id/rela">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stowarzyszeniespiewacze"
            android:id="@+id/textView" android:singleLine="false" android:autoText="false"
            android:gravity="center_horizontal" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kierownik"
            android:id="@+id/textView2" android:layout_gravity="center_horizontal" android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" android:layout_marginTop="34dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Szymon Wyrzykowski"
            android:id="@+id/textView3" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Prezes"
              android:id="@+id/textView4" android:layout_gravity="center_horizontal"
              android:layout_marginTop="34dp" android:textStyle="bold"
              android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edward Półrolniczak"
              android:id="@+id/textView5" android:layout_below="@+id/textView4" android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Tel.: +48 603 66 11 31" android:id="@+id/textView6"
              android:layout_below="@+id/textView5" android:layout_centerHorizontal="true" android:autoLink="phone"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adres"
              android:id="@+id/textView7" android:layout_gravity="center_horizontal"
              android:textStyle="bold"
              android:layout_below="@+id/textView6" android:layout_centerHorizontal="true"
              android:layout_marginTop="36dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/adres" android:id="@+id/textView8"
              android:layout_centerVertical="true" android:layout_centerHorizontal="true"
              android:layout_marginLeft="25dp" android:layout_marginRight="15dp" android:autoLink="phone"
              android:gravity="center_horizontal"
                android:layout_below="@id/textView7"
            />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="E-mail"
              android:id="@+id/textView9" android:layout_gravity="center_horizontal"
              android:textStyle="bold"
              android:layout_marginTop="37dp" android:layout_below="@+id/textView8"
              android:layout_alignRight="@+id/textView7" android:layout_alignEnd="@+id/textView7"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="chaps@zut.edu.pl" android:id="@+id/textView10"
              android:layout_below="@+id/textView9" android:layout_centerHorizontal="true" android:autoLink="email"/>
</RelativeLayout>