<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/lay" android:paddingLeft="10dp"
                android:paddingTop="25dp">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginEditText"
            android:hint="Nazwa użytkownika"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:hint="Hasło"
            android:layout_below="@+id/loginEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignLeft="@+id/loginEditText"
            android:layout_alignStart="@+id/loginEditText"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaloguj"
            android:id="@+id/zalogujButton"
            android:layout_below="@+id/passwordEditText" android:layout_alignLeft="@+id/passwordEditText"
            android:layout_alignStart="@+id/passwordEditText"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapamiętaj hasło"
            android:id="@+id/checkBoxauth"
            android:layout_below="@+id/zalogujButton" android:layout_alignLeft="@+id/zalogujButton"
            android:layout_alignStart="@+id/zalogujButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dostęp do treści mają tylko członkowie CHAPS."
            android:id="@+id/infoTextView"
            android:layout_below="@+id/checkBoxauth" android:layout_alignLeft="@+id/checkBoxauth"
            android:layout_alignStart="@+id/checkBoxauth"/>
</RelativeLayout>